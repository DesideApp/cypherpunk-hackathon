{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@wallet-adapter/*": ["./wallet-adapter/*"],
      "@features/*": ["features/*"],
      "@adapters/*": ["adapters/*"],
      "@shared/*": ["shared/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["vitest", "vite/client", "@testing-library/jest-dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
